\s2 \qc\snext0\b\f0\fs28\fi0\li0\ri0 Действующие лица\par
\s0 \ql\snext0\f1\fs24\b0\i0\fi567\sb0\sa0\li0\ri0 \par\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Антон Антонович Сквозник-Дмухановский\b0  , городничий. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Анна Андреевна\b0  , жена его. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Марья Антоновна\b0  , дочь его. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Лука Лукич Хлопов\b0  , смотритель училищ. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Жена\b0   его. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Аммос Федорович Ляпкин-Тяпкин\b0  , судья. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Артемий Филиппович Земляника\b0  , попечитель богоугодных заведений. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Иван Кузьмич Шпекин\b0  , почтмейстер. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Петр Иванович Добчинский\b0  , городской помещик.\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Петр Иванович Бобчинский\b0  , городской помещик.\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Иван Александрович Хлестаков\b0  , чиновник из Петербурга. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Осип\b0  , слуга его. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Христиан Иванович Гибнер\b0  , уездный лекарь. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Федор Иванович Люлюков\b0  , отставной чиновник, почетное лицо в городе.\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Иван Лазаревич Растаковский\b0  , отставной чиновник, почетное лицо в городе.\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Степан Иванович Коробкин\b0  , отставной чиновник, почетное лицо в городе.\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Степан Ильич Уховертов\b0  , частный пристав. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Свистунов\b0  , полицейский\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Пуговицын\b0  , полицейский\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Держиморда\b0  , полицейский\par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Абдулин\b0  , купец. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Февронья Петровна Пошлепкина\b0  , слесарша. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Жена унтер-офицера\b0  . \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Мишка\b0  , слуга городничего. \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Слуга трактирный\b0  . \par
\s0 \qj\snext0\f1\fs24\b0\i0\fi567\li0\ri0 \b Гости и гостьи, купцы, мещане, просители.\b0  \par
